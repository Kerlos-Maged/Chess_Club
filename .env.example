# ==========================================
# Chess Club - Environment Variables
# ==========================================

# MongoDB
# For local: mongodb://localhost:27017/chess-club
# For Atlas: mongodb+srv://username:password@cluster.mongodb.net/chess-club
MONGODB_URI=mongodb://localhost:27017/chess-club

# Server
PORT=5000
NODE_ENV=development

# JWT Authentication
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# CORS
# URL where frontend is running
CLIENT_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

